# AWS Configuration
aws_region     = "us-east-1"        # AWS region where resources will be created
instance_type  = "t3.medium"        # EC2 instance type (t3.micro, t3.small, t3.medium, etc.)

# SSH Configuration
key_pair_name  = "your-key-pair-name"  # Name of your AWS Key Pair (must exist in AWS)
ssh_key_path   = "~/.ssh/id_rsa"      # Path to your SSH private key file
ssh_cidr       = "0.0.0.0/0"          # CIDR block for SSH access (restrict to your IP for security, e.g., "1.2.3.4/32")
server_user    = "ubuntu"             # SSH user for the server (usually "ubuntu" for Ubuntu AMIs)

# EBS Volume Configuration
state_volume_size = 10                # Size of EBS volume for Terraform state storage (GB)
availability_zone = ""                # Optional: Specific availability zone (leave empty for auto-selection)

